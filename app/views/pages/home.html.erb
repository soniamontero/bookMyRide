<div class="home">
  <div class="home-content">
    <h2 class='title'>
      Pick a location and book your ride!
    </h2>
    <div class="home-form">
      <%= form_tag rides_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a ride"
        %>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          Search
        </button>
      <% end %>
    </div>
  </div>
</div>

