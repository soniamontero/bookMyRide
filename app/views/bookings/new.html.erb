<%= simple_form_for([@ride, @booking]) do |f| %>
  <%= f.input :date_begin,  as: :date, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.input :date_end, as: :date, placeholder: "To", wrapper_html: { class: "inline_field_wrapper" } %>

  <%= f.submit "Book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
<% end %>
