<div class="main-rides-container">
  <div class="rides-left-column">
      <div class="rides-index-searchbar">
        <%= form_tag rides_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a ride"
          %>
        <% end %>
      </div>

    <div class="rides-index">
      <div class="row">
        <% @rides.each do |ride| %>
          <div class="col-sm-6 col-md-6 col-lg-6 lg-padding">
            <%= link_to ride_path(ride) do %>
              <%= render 'ride-card', ride: ride %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
    <div
      id="map"
      style="
      height: calc(100vh - 65px);"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
